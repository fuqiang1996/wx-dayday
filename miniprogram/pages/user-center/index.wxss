page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.hnisi-preview-item{
    display: flex;
    align-items: center;
}

.hnisi-preview-label{
    width: 204rpx;
    word-wrap: break-word;
    word-break: break-all;
    color: #888888;
    font-size: 28rpx;
    line-height: 40rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    text-align: center;
}

.hnisi-preview-value{
    word-wrap: break-word;
    word-break: break-all;
    color: #888888;
    font-size: 28rpx;
    line-height: 40rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    flex: 1;
    text-align: center;
}

.hnisi-preview-value-left{
    text-align: center;
    color: cornflowerblue;
}

.left{
    text-align: left;
    align-items: inherit;
    padding-left: 0rpx;
}
.allcost{
    text-align: center;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    font-size: 40rpx;
}
.section{
    display: flex;
    align-items: center;    /**子view垂直居中*/
    vertical-align: center; /**垂直居中*/
    justify-content: center; /**内容居中*/
    flex-direction:row; /**子view排列方式row--水平 column--垂直*/
    border-bottom-color: dimgray;
}
.picker{
    margin: 8rpx 15rpx;
    color: #007aff;
    font-size: 43rpx;
}
.section__title{
    margin: 8rpx 8rpx;
    font-size: 35rpx;
}
.navi{
    text-align: center;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    font-size: 40rpx;
    color: cornflowerblue;
}